<div class="card">
    {{# cardHeader }}
        <div class="card-header">
            {{ cardHeader }}
        </div>
    {{/cardHeader}}

    {{#cardImage}}
        <img class="card-img-top img-fluid" src="{{ cardImage }}" alt="Card image">
    {{/cardImage}}

    {{#cardContent}}
        <div class="card-block">
            {{{ cardContent }}}
        </div>
    {{/cardContent}}

    {{# cardListGroup }}
        {{> molecules-list-group }}
    {{/ cardListGroup }}

    {{# cardFooter }}
    <div class="card-footer">
        {{ cardFooter }}
    </div>
    {{/cardFooter}}
</div>