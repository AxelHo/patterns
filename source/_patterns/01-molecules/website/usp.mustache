    <h3 class="m-usp-title">{{title}}</h3>
    <p class="m-usp-description">{{description}}</p>
    <p class="m-usp-more-link">
        {{#read-more}}
            <a href="{{href}}">{{text}} <span class="{{icon-class}}"></span></a>
        {{/read-more}}
    </p>
</div>