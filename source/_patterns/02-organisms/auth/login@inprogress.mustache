<div class="o-login">
    <div class="o-login-logo text-xs-center">
        {{> atoms-logo }}
    </div>

    {{# contextInfo }}
        <div class="card card-block">
            <h4 class="card-title">{{title}}</h4>
            <p class="card-text">{{text}}</p>
        </div>
    {{/contextInfo}}

    <!-- CARD component -->
    <div class="card">
        <div class="card-header">
            {{{ login.header }}}
        </div>

        <div class="card-block">
            {{# login.items }}
                {{> molecules-form-group }}
            {{/ login.items }}
        </div>

        <div class="card-footer text-xs-right">
            {{> atoms-button:btn btn-primary }}
        </div>
    </div>
</div>